// Prisma schema para usuários, grupos e permissões
// Salve como schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  group     Group?   @relation(fields: [groupId], references: [id])
  groupId   Int?
  resetToken String? // Para recuperação de senha
}

model Group {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions Permission[]
  users       User[]
}

model Permission {
  id      Int    @id @default(autoincrement())
  name    String @unique
  group   Group? @relation(fields: [groupId], references: [id])
  groupId Int?
}
